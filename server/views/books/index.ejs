<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
        <div class="row">
            <div class="col-md-offset-1 col-md-10">
                <h3>Favourite Books List </h3>
                <a href="/books/add" class="btn btn-primary"><i class="fa fa-plus"></i> Add a book</a>
                <br>
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover">
                        <thead>
                            <tr>
                                <th class="text-center col-md-2">Title</th>
                                <th class="text-center col-md-1">Price</th>
                                <th class="text-center col-md-2">Author</th>
                                <th class="text-center col-md-2">Genre</th>
                                <th class="text-center col-md-3">Description</th>
                                <th class="text-center col-md-1"></th>
                                <th class="text-center col-md-1"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Template Row -->
                            <% for (let count = 0; count < books.length; count++) { %>
                            <tr>
                                <td class="text-center col-md-2"><%= books[count].Title %></td>
                                <td class="text-center col-md-1">$<%= books[count].Price %></td>
                                <td class="text-center col-md-2"><%= books[count].Author %></td>
                                <td class="text-center col-md-2"><%= books[count].Genre %></td>
                                <td class="text-center col-md-3"><%= books[count].Description %></td>

                                <td class="text-center col-md-1">
                                    <!-- Edit button -->
                                    <a href="/books/<%= books[count].id %>" class="btn btn-primary"><i class="fas fa-pencil-alt"></i>&nbsp;Edit</a>
                                </td>

                                <td class="text-center col-md-1">
                                    <!-- Delete button -->
                                    <a href="/books/delete/<%= books[count].id %>" class="btn btn-danger"><i class="fas fa-trash-alt"></i>&nbsp;Delete</a>
                                </td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
                <div class="col-md-offset-1 col-md-10 text-center">
                    <ul class="pagination pagination-lg pager" id="myPager"></ul>
                </div>
            </div>
        </div>
    </div>

<% include ../partials/footer.ejs %>


